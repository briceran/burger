<h1>Eat the Burger</h1>
<img src="assets/img/burger.jpeg" alt="Hamburger" style="width:304px;height:228px;">
<h2>Burgers:</h2>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>


      </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Devoured burgers:</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}



      </li>
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>



  <button type="submit">Add Burger</button>
</form>
